<Window x:Class="NguyenHongHiepWPF.Admin.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenHongHiepWPF.Admin"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="AdminDashboardWindow" Height="400" Width="600">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="20" />
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="300"/>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <Button x:Name="btnCustomer" Content="Customer Management" />
        <Button x:Name="btnCar" Content="Car Management" />
        <Button x:Name="btnRenting" Content="Renting Management" />
        <Button x:Name="btnReport" Content="Statistic Report" />
    </StackPanel>
</Window>
