@page
@model NguyenHongHiepSignalR.Pages.Admin.CustomerManagement.CreateModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                @Html.ValidationMessageFor(m => m.Customer.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Telephone" class="control-label"></label>
                <input type="number" asp-for="Customer.Telephone" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Telephone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input type="email" asp-for="Customer.Email" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Birthday" class="control-label"></label>
                <input asp-for="Customer.Birthday" class="form-control" min="1900-01-01"
                       onfocus="this.max=new Date(new Date().getFullYear() - 18, new Date().getMonth(), new Date().getDate()).toISOString().split('T')[0]" />
                @Html.ValidationMessageFor(m => m.Customer.Birthday, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input type="password" asp-for="Customer.Password" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="Customer.ConfirmPassword" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
