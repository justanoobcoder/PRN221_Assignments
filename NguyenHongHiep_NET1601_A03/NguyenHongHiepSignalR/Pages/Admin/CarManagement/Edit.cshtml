@page
@model NguyenHongHiepSignalR.Pages.Admin.CarManagement.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarInformation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarInformation.CarId" />
            <div class="form-group">
                <label asp-for="CarInformation.CarName" class="control-label"></label>
                <input asp-for="CarInformation.CarName" class="form-control" />
                @Html.ValidationMessageFor(model => model.CarInformation.CarName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.CarDescription" class="control-label"></label>
                <input asp-for="CarInformation.CarDescription" class="form-control" />
                @Html.ValidationMessageFor(model => model.CarInformation.CarDescription, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.NumberOfDoors" class="control-label"></label>
                <input type="number" asp-for="CarInformation.NumberOfDoors" class="form-control no-space" />
                @Html.ValidationMessageFor(model => model.CarInformation.NumberOfDoors, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.SeatingCapacity" class="control-label"></label>
                <input type="number" asp-for="CarInformation.SeatingCapacity" class="form-control no-space" />
                @Html.ValidationMessageFor(model => model.CarInformation.SeatingCapacity, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.FuelType" class="control-label"></label>
                <input asp-for="CarInformation.FuelType" class="form-control" />
                @Html.ValidationMessageFor(model => model.CarInformation.FuelType, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.Year" class="control-label"></label>
                <input type="number" asp-for="CarInformation.Year" class="form-control no-space" />
                @Html.ValidationMessageFor(model => model.CarInformation.Year, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.ManufacturerId" class="control-label"></label>
                <select asp-for="CarInformation.ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="CarInformation.ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.SupplierId" class="control-label"></label>
                <select asp-for="CarInformation.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="CarInformation.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarInformation.CarRentingPricePerDay" class="control-label"></label>
                <input asp-for="CarInformation.CarRentingPricePerDay" class="form-control no-space" />
                @Html.ValidationMessageFor(model => model.CarInformation.CarRentingPricePerDay, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
