@page
@model NguyenHongHiepSignalR.Pages.Member.Profile.EditModel

@{
    Layout = "_MemberLayout";
    ViewData["Title"] = "Edit";
}

<h1>Edit Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <div class="form-group">
                <label asp-for="Customer.CustomerName" class="control-label"></label>
                <input asp-for="Customer.CustomerName" class="form-control" />
                @Html.ValidationMessageFor(m => m.Customer.CustomerName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Telephone" class="control-label"></label>
                <input asp-for="Customer.Telephone" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Telephone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerBirthday" class="control-label"></label>
                <input type="date" asp-for="Customer.CustomerBirthday" class="form-control" min="1900-01-01"
                       onfocus="this.max=new Date(new Date().getFullYear() - 18, new Date().getMonth(), new Date().getDate()).toISOString().split('T')[0]" />
                @Html.ValidationMessageFor(m => m.Customer.CustomerBirthday, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input asp-for="Customer.Password" class="form-control no-space" />
                @Html.ValidationMessageFor(m => m.Customer.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-page="./Index">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
