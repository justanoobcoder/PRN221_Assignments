@page
@model NguyenHongHiepRazorPages.Pages.Admin.CarManagement.DetailsModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CarInformation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.CarName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.CarName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.CarDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.CarDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.NumberOfDoors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.NumberOfDoors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.SeatingCapacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.SeatingCapacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.FuelType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.FuelType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.CarRentingPricePerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.CarRentingPricePerDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.Manufacturer.ManufacturerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarInformation.Supplier.SupplierName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarInformation.CarStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CarInformation.CarStatus == 1)
            {
                <span>Active</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.CarInformation?.CarId">Edit</a> |
    <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
</div>
