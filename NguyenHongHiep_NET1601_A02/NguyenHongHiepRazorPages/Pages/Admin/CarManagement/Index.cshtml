@page
@model NguyenHongHiepRazorPages.Pages.Admin.CarManagement.IndexModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<div>
    <form method="get">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Search by name">
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].CarDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].NumberOfDoors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].SeatingCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].FuelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].CarRentingPricePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarInformation[0].CarStatus)
            </th>
            <th width="10%">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CarInformation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDoors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatingCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarRentingPricePerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td>
                @if (item.CarStatus == 1)
                {
                    <span style="color: green;">Active</span>
                }
                else
                {
                    <span style="color: red">Deleted</span>
                }
            </td>
            <td>
                @if (item.CarStatus == 1)
                {
                    <span>
                        <a asp-page="./Edit" asp-route-id="@item.CarId"><i class="fa fa-edit" style="font-size:24px"></i></a> |
                        <a asp-page="./Details" asp-route-id="@item.CarId"><i class="fa fa-eye" style="font-size:24px"></i></a> |
                        <a asp-page="./Delete" asp-route-id="@item.CarId"><i class="fa fa-trash-o text-danger" style="font-size:24px"></i></a>
                    </span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
