@page "/"
@model NguyenHongHiepRazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginRegisterLayout";
}

<div class="container">
    <div class="login-page">
        <div class="form">
            <div class="login-form">
                <form method="post">
                    <input type="email" placeholder="Email" asp-for="Email">
                    <input type="password" placeholder="Password" asp-for="Password">
                    @Html.ValidationMessageFor(m => m.ErrorMessage, "", new { @class = "text-danger" })
                    <button>Login</button>
                </form>
                <p class="message">Not registered? <a href="Register">Create an Account</a></p>
            </div>
        </div>
    </div>
</div>