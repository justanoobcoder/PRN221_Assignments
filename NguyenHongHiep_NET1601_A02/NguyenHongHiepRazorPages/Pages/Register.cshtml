@page
@model NguyenHongHiepRazorPages.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LoginRegisterLayout";
}

<div class="container">
    <div class="register-page">
        <div class="form">
            <div class="register-form">
                <form method="post">
                    <div>
                        <input type="number" placeholder="Telephone" asp-for="Customer.Telephone">
                        <span class="text-danger" asp-validation-for="Customer.Telephone" />
                    </div>
                    <div>
                        <input type="text" placeholder="Name" asp-for="Customer.Name">
                        <span class="text-danger" asp-validation-for="Customer.Name" />
                    </div>
                    <div>
                        <input type="email" placeholder="Email" asp-for="Customer.Email">
                        <span class="text-danger" asp-validation-for="Customer.Email" />
                    </div>
                    <div>
                        <input type="password" placeholder="Password" asp-for="Customer.Password">
                        <span class="text-danger" asp-validation-for="Customer.Password" />
                    </div>
                    <div>
                        <input type="password" placeholder="Confirm Password" asp-for="Customer.ConfirmPassword">
                        <span class="text-danger" asp-validation-for="Customer.ConfirmPassword" />
                    </div>
                    <div>
                        <input type="date" placeholder="Birthday" asp-for="Customer.Birthday" />
                        <span class="text-danger" asp-validation-for="Customer.Birthday" />
                    </div>
                    <button>Create</button>
                </form>
                <p class="message">Already registered? <a href="/">Sign In</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}